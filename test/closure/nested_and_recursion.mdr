var createCounter = fn(var initial : Int) : (Int) -> () -> Int
{
  var counter = fn(var value : Int) : () -> Int 
  {
    initial = initial + value;
    return fn() : Int { return initial; };
  };
  return counter;
};

var counter = createCounter(5);
var next = counter(3);

fixed main = fn() : Int
{
    PrintLine(next() as Text);  // Should print 8

    return 0;
};